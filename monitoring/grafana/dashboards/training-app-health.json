{
  "id": null,
  "uid": "training-app-health",
  "title": "Training App - Health",
  "tags": ["training-app", "observability"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "datasource",
        "label": "Prometheus",
        "query": "prometheus",
        "refresh": 1,
        "hide": 0,
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Requests per second",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_request_duration_seconds_count[$__rate_interval]))",
          "legendFormat": "RPS"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Error rate (5xx)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(rate(http_request_duration_seconds_count{status_code=~\"5..\"}[$__rate_interval])) / sum(rate(http_request_duration_seconds_count[$__rate_interval]))) * 100",
          "legendFormat": "5xx %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" },
        "overrides": []
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Latency (P50/P90/P99)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 7 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[$__rate_interval])) by (le))",
          "legendFormat": "P50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket[$__rate_interval])) by (le))",
          "legendFormat": "P90"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[$__rate_interval])) by (le))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Requests by status code",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 7 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_request_duration_seconds_count[$__rate_interval])) by (status_code)",
          "legendFormat": "{{status_code}}"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Requests by route",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_request_duration_seconds_count[$__rate_interval])) by (route)",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Backend up",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "expr": "max(up{job=\"backend\"})"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "CPU usage (%)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 21 },
      "targets": [
        {
          "refId": "A",
          "expr": "(rate(training_app_process_cpu_user_seconds_total[$__rate_interval]) + rate(training_app_process_cpu_system_seconds_total[$__rate_interval])) * 100",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" },
        "overrides": []
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Process memory (RSS)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 21 },
      "targets": [
        {
          "refId": "A",
          "expr": "training_app_process_resident_memory_bytes",
          "legendFormat": "RSS"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Heap used",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "refId": "A",
          "expr": "training_app_nodejs_heap_size_used_bytes",
          "legendFormat": "Heap used"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Event loop lag",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "refId": "A",
          "expr": "training_app_nodejs_eventloop_lag_seconds",
          "legendFormat": "Lag (s)"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      }
    }
  ]
}
